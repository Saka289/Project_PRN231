@using WebApp.Models.Dtos;
@{
    ViewData["Title"] = "Stocks";
}
@model List<StockDto> 

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="text-primary">List of inventories</h5>
        <a asp-action="Create" class="btn btn-sm btn-secondary"> <i class="bi bi-plus-square-fill"></i> Create</a>
    </div>
    <div class="card-body">
        <table id="DT_load" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    
                    <th>ProductName</th>
                    <th>Image</th>
                    <th>Stock Quantity</th>
                    <th>Reserved Quantity</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Title</td>
                            <td><img src="@item.Product.Image" alt="Product Image" style="width: 100px;height: 100px;" /></td>
                            <td>@item.StockQuantity</td>
                            <td>@item.ReservedQuantity</td>
                            <td style="text-align:center">
                                <a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <button id="btnDelete" data-couponid="@item.Id" class="btn btn-sm btn-danger">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).on('click', '#btnDelete', function () {
            var couponid = $(this).data("couponid");
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Admin/Inventory/Delete/' + couponid;
                }
            });
        });
    </script>
}


﻿@using WebApp.Models.Dtos;
@{
    ViewData["Title"] = "Stocks";
}
@model List<CouponDto> 

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="text-primary">List of category</h5>
        <a class="btn btn-sm btn-secondary"> <i class="bi bi-plus-square-fill"></i> Create</a>
    </div>
    <div class="card-body">
        <table id="DT_load" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    
                    <th>Coupon Code</th>
                    <th>Discount Amount</th>
                    <th>Min Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CouponCode</td>
                            <td>@item.DiscountAmount</td>
                            <td>@item.MinAmount</td>
                            <td style="text-align:center">
                                <a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@item.CouponId">Update</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CouponId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@model WebApp.Models.Dtos.ForgetPasswordDto

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Tracking Order</h2>
                        <p>Home <span>-</span> Tracking Order</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================login_part Area =================-->
<section class="login_part padding_top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>New to our Shop?</h2>
                        <p>
                            There are advances being made in science and technology
                            everyday, and a good example of this is the
                        </p>
                        <a asp-controller="Auth" asp-action="Login" class="btn_3">Login Account</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            Welcome Back ! <br>
                            Forget Password in now
                        </h3>
                        <form class="row contact_form" action="ForgetPassword" method="post" novalidate="novalidate">
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger" />
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">forget password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================login_part end =================-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}